---
import { MapPin, Phone, Mail } from "lucide-astro";
---

<footer class="bg-white border-t border-gray-200 mt-auto">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row justify-center items-center gap-8">
      <div class="flex items-center">
        <MapPin class="h-4 w-4 text-primary stroke-primary mr-2 flex-shrink-0" />
        <span class="text-sm text-gray-600 whitespace-nowrap"
          >〒508-0203 岐阜県中津川市福岡510-32</span
        >
      </div>
      <div class="flex items-center">
        <Phone class="h-4 w-4 text-primary stroke-primary mr-2 flex-shrink-0" />
        <a
          href="tel:090-3934-4554"
          class="text-sm text-gray-600 hover:text-primary transition-colors"
        >
          090-3934-4554
        </a>
      </div>
      <div class="flex items-center">
        <Mail class="h-4 w-4 text-primary stroke-primary mr-2 flex-shrink-0" />
        <a
          href="mailto:donguri@maropu.com"
          class="text-sm text-gray-600 hover:text-primary transition-colors"
        >
          donguri@maropu.com
        </a>
      </div>
    </div>
  </div>
</footer>
