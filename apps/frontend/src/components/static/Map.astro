---
import { MapPin } from "lucide-astro";

const mapEmbedUrl =
  "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3251.8!2d137.4!3d35.4!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2s岐阜県中津川市福岡510-32!5e0!3m2!1sja!2sjp!4v1";
const mapDirectionsUrl = "https://www.google.com/maps/dir//岐阜県中津川市福岡510-32";
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-serif font-bold text-gray-900 mb-4">アクセス</h2>
    </div>
    <div class="flex flex-col items-center gap-8">
      <div class="w-full max-w-4xl">
        <div class="w-full h-[400px] rounded-lg overflow-hidden shadow-lg">
          <iframe
            src={mapEmbedUrl}
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="どんぐりピアノ教室の地図"></iframe>
        </div>
      </div>
      <div>
        <a
          href={mapDirectionsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 border border-primary text-primary bg-white hover:bg-primary hover:text-white transition-colors rounded-md font-medium"
        >
          <MapPin class="h-5 w-5 mr-2" />
          Google Mapで経路を見る
        </a>
      </div>
    </div>
  </div>
</section>
